<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gdzie i z kim?</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background: url('../../img/main.jpg'); background-attachment: fixed; background-size:cover">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Gdzie i z kim?", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Mapa", "Mapa", "Home")</li>
                    <li>@Html.ActionLink("Dodaj", "Create", "Lokalizacjas")</li>
                    <li>@Html.ActionLink("Kontakt", "Contact", "Home")</li>
                    <li>@Html.ActionLink("Informacje", "About", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content" , style="padding-top:100px; padding-bottom:100px">
        @RenderBody()
    </div>

    <footer style="position:fixed;right:0;left:0;bottom:0;padding:1rem;text-align:center; color:white; font-family: Helvetica Neue, Comic Sans MS, Comic Sans, cursive; background-color:black">
        <p>&copy; @DateTime.Now.Year - Created by Justyna & Wojciech Żarnowieccy</p>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>